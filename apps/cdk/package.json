{
  "name": "cdk",
  "version": "0.1.0",
  "bin": {
    "cdk": "bin/cdk.js"
  },
  "scripts": {
    "start": "pnpm run cdk:synth && pnpm run start:offline",
    "start:offline": "sam local start-api  -t cdk.out/ApiWidget.template.json",
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "cdk:synth": "cdk synth --app 'npx ts-node --prefer-ts-exts bin/api-widget-cdk.ts'"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/node": "20.5.3",
    "aws-cdk": "2.94.0",
    "esbuild": "^0.19.2",
    "jest": "^29.6.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "~5.1.6"
  },
  "dependencies": {
    "aws-cdk-lib": "2.94.0",
    "constructs": "^10.2.70",
    "source-map-support": "^0.5.21"
  }
}
